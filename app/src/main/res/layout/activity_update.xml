<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Update"
    android:focusable="false"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableLeft="@drawable/ic_contacts_black_24dp"
            android:drawablePadding="@dimen/_15sdp"
            android:hint="id"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="#3a3636"
            android:textColorHint="#abafb3"
            android:textSize="@dimen/_15sdp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="@dimen/_15sdp"
            android:hint="First Name"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="#3a3636"
            android:textColorHint="#abafb3"
            android:textSize="@dimen/_15sdp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/lname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="@dimen/_15sdp"
            android:hint="Last Name"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="#3a3636"
            android:textColorHint="#abafb3"
            android:textSize="@dimen/_15sdp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/e1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="@dimen/_15sdp"
            android:hint="Gender"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="#3a3636"
            android:textColorHint="#abafb3"
            android:textSize="@dimen/_15sdp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/e2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="@dimen/_15sdp"
            android:hint="Date_of_birth"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="#3a3636"
            android:textColorHint="#abafb3"
            android:textSize="@dimen/_15sdp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableLeft="@drawable/ic_phone_iphone_black_24dp"
            android:drawablePadding="@dimen/_15sdp"
            android:hint="Mobile"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="#3a3636"
            android:textColorHint="#abafb3"
            android:textSize="@dimen/_15sdp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableLeft="@drawable/ic_drafts_black_24dp"
            android:drawablePadding="@dimen/_15sdp"
            android:hint="Email"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="#3a3636"
            android:textColorHint="#abafb3"
            android:textSize="@dimen/_15sdp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:drawablePadding="@dimen/_15sdp"
            android:hint="Password"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="#3a3636"
            android:textColorHint="#abafb3"
            android:textSize="@dimen/_15sdp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UP"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:background="#000"
        android:text="Update"
        android:textColor="#f4f0f0"
        android:textSize="20dp" />

</LinearLayout>